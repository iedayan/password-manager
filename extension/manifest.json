{
  "manifest_version": 3,
  "name": "Lok Password Manager",
  "version": "1.0.0",
  "description": "AI-powered password manager with auto-fill, breach detection, and zero-knowledge security",
  
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "notifications",
    "contextMenus",
    "scripting"
  ],
  
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  
  "background": {
    "service_worker": "src/background/service-worker.js"
  },
  
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": [
        "src/utils/performance.js",
        "src/utils/api.js",
        "src/utils/biometric-auth.js",
        "src/utils/offline-storage.js",
        "src/content/smart-suggestions.js",
        "src/content/form-detector.js", 
        "src/content/auto-fill.js",
        "src/content/content.js"
      ],
      "css": ["src/content/styles-optimized.css"],
      "run_at": "document_end"
    }
  ],
  
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_title": "Lok Password Manager"
  },
  
  "icons": {
    "16": "assets/icon16.png",
    "32": "assets/icon32.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  },
  
  "web_accessible_resources": [
    {
      "resources": [
        "src/content/*",
        "src/popup/*",
        "assets/*"
      ],
      "matches": ["http://*/*", "https://*/*"]
    }
  ],
  
  "commands": {
    "auto-fill": {
      "suggested_key": {
        "default": "Ctrl+Shift+L",
        "mac": "Command+Shift+L"
      },
      "description": "Auto-fill login form"
    },
    "open-vault": {
      "suggested_key": {
        "default": "Ctrl+Shift+V",
        "mac": "Command+Shift+V"
      },
      "description": "Open password vault"
    },
    "generate-password": {
      "suggested_key": {
        "default": "Ctrl+Shift+G",
        "mac": "Command+Shift+G"
      },
      "description": "Generate secure password"
    }
  }
}