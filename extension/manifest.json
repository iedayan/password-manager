{
  "manifest_version": 3,
  "name": "Lok Password Manager",
  "version": "1.0.0",
  "description": "Secure password management with auto-fill and form detection",
  
  "permissions": [
    "activeTab",
    "storage",
    "tabs"
  ],
  
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  
  "background": {
    "service_worker": "src/background/service-worker.js"
  },
  
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["src/content/form-detector.js", "src/content/auto-fill.js"],
      "run_at": "document_end"
    }
  ],
  
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_title": "Lok Password Manager"
  },
  
  "icons": {
    "16": "assets/icon-16.png",
    "48": "assets/icon-48.png",
    "128": "assets/icon-128.png"
  },
  
  "web_accessible_resources": [
    {
      "resources": ["src/content/*"],
      "matches": ["http://*/*", "https://*/*"]
    }
  ]
}